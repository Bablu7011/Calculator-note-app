<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Calculator and Notes</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #c9f1e8;
            color: #333;
            margin: 0;
            padding: 0;
        }

        h1 {
            background-color: #1392cd;
            color: white;
            margin: 0;
            padding: 30px;
            text-align: center;
        }

        .container {
            display: flex;
            justify-content: space-between;
            margin: 30px;
        }

        .calculator, .notes {
            background: #fbf9fb;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 30px;
            width: 45%;
        }

        .calculator {
            max-width: 500px;
        }

        /* Larger Display */
        #display {
            width: 80%;
            height: 60px;
            font-size: 1.8rem;
            text-align: right;
            padding: 10px;
            border: 2px solid #ccc;
            border-radius: 5px;
            margin-bottom: 15px;
        }

        .buttons {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 10px;
        }

        .btn {
            padding: 15px;
            font-size: 1.2rem;
            color: #fff;
            background: #ff6f61;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .btn:hover {
            background: #ff3b2f;
        }

        .btn.operator {
            background: #ff8c42;
        }

        .btn.operator:hover {
            background: #ff6b2f;
        }

        .btn.clear {
            background: #ff4757;
        }

        .btn.clear:hover {
            background: #ff2d3a;
        }

        .btn.function {
            background: #6c5ce7;
        }

        .btn.function:hover {
            background: #4a3bc4;
        }

        .note textarea {
            width: 100%;
            padding: 8px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            margin-bottom: 5px;
        }

        .note button {
            align-self: flex-end;
            padding: 5px 10px;
            font-size: 0.9rem;
            color: #fff;
            background: #ff4757;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .note button:hover {
            background: #ff2d3a;
        }
    </style>
</head>
<body>
    <h1>Calculator and Notes</h1>

    <div class="container">
        <!-- Calculator Section -->
        <div class="calculator">
            <h1>Calculator</h1>
            <input type="text" id="display" disabled>
            <div class="buttons">
                <button class="btn clear" onclick="clearDisplay()">C</button>
                <button class="btn function" onclick="backspace()">⌫</button>
                <button class="btn function" onclick="squareRoot()">√</button>
                <button class="btn operator" onclick="appendOperator('/')">/</button>
                <button class="btn" onclick="appendNumber('7')">7</button>
                <button class="btn" onclick="appendNumber('8')">8</button>
                <button class="btn" onclick="appendNumber('9')">9</button>
                <button class="btn operator" onclick="appendOperator('*')">*</button>
                <button class="btn" onclick="appendNumber('4')">4</button>
                <button class="btn" onclick="appendNumber('5')">5</button>
                <button class="btn" onclick="appendNumber('6')">6</button>
                <button class="btn operator" onclick="appendOperator('-')">-</button>
                <button class="btn" onclick="appendNumber('1')">1</button>
                <button class="btn" onclick="appendNumber('2')">2</button>
                <button class="btn" onclick="appendNumber('3')">3</button>
                <button class="btn operator" onclick="appendOperator('+')">+</button>
                <button class="btn" onclick="appendNumber('0')">0</button>
                <button class="btn" onclick="appendNumber('.')">.</button>
                <button class="btn operator" onclick="appendOperator('%')">%</button>
                <button class="btn" onclick="calculate()" style="grid-row: span 1;">=</button>
            </div>
        </div>

        <!-- Notes Section -->
        <div class="notes">
            <h2>Notes</h2>
            <div id="notes-container">
                <!-- Notes will be added here -->
            </div>
            <button onclick="addNote()">Add Note</button>
        </div>
    </div>

    <script>
        // Calculator functionality
        let display = document.getElementById('display');
        let currentInput = '';
        
        function appendNumber(number) {
            currentInput += number;
            display.value = currentInput;
        }

        function appendOperator(operator) {
            currentInput += ' ' + operator + ' ';
            display.value = currentInput;
        }

        function clearDisplay() {
            currentInput = '';
            display.value = '';
        }

        function calculate() {
            try {
                display.value = eval(currentInput);
                currentInput = display.value;
            } catch (e) {
                display.value = 'Error';
                currentInput = '';
            }
        }

        function backspace() {
            currentInput = currentInput.slice(0, -1);
            display.value = currentInput;
        }

        function squareRoot() {
            try {
                display.value = Math.sqrt(eval(currentInput));
                currentInput = display.value;
            } catch (e) {
                display.value = 'Error';
                currentInput = '';
            }
        }

        // Notes functionality
        let notesContainer = document.getElementById('notes-container');

        function addNote() {
            let noteDiv = document.createElement('div');
            noteDiv.classList.add('note');
            noteDiv.innerHTML = `<textarea placeholder="Write your note here..."></textarea><button onclick="deleteNote(this)">Delete</button>`;
            notesContainer.appendChild(noteDiv);
        }

        function deleteNote(button) {
            let noteDiv = button.parentElement;
            notesContainer.removeChild(noteDiv);
        }
    </script>
</body>
</html>
